<div class="page">
  <header role="banner">
    {{ page.header }}
    {{ page.primary_menu }}
  </header>


  {{ page.highlighted }}

  <div class="main-content">
    <main role="main">
      <a id="main-content" tabindex="-1"></a>
      <div class="layout-content">
        {{ page.content }}
      </div>
    </main>

    {% if page.sidebar %}
      <aside class="sidebar" role="complementary">
        {{ page.sidebar }}
      </aside>
    {% endif %}
  </div>

  <footer role="contentinfo">
    {{ page.footer }}
  </footer>
</div>
