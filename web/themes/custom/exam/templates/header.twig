<header id="header" class="header" role="banner" aria-label="Site header">
  <div class="container">
    <div class="row align-items-center">
      {# Блок 1: Логотип #}
      <div class="col-md-3">
        <a href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home" class="navbar-brand">
          {{ site_logo }}
        </a>
      </div>

      {# Блок 2: Назва сайту і підпис #}
      <div class="col-md-3">
        <div class="site-name-slogan">
          {% if site_name %}
            <h1 class="site-name">
              <a href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home">{{ site_name }}</a>
            </h1>
          {% endif %}
          {% if site_slogan %}
            <div class="site-slogan">{{ site_slogan }}</div>
          {% endif %}
        </div>
      </div>

      {# Блок 3: Головне меню #}
      <div class="col-md-3">
        {{ page.primary_menu }}
      </div>

      {# Блок 4: Соціальні мережі та пошук #}
      <div class="col-md-3">
        <div class="social-search-wrapper">
          {# Соціальні мережі #}
          {% if page.social_links %}
            <div class="social-links">
              {{ page.social_links }}
            </div>
          {% endif %}

          {# Пошук #}
          {% if page.search %}
            <div class="search-form">
              {{ page.search }}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</header>
