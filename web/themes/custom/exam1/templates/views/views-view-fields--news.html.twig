<div class="article-preview">
  <div class="article-date">
    <span class="month">{{ fields.field_date.content|date('M')|upper }}</span>
    <span class="day">{{ fields.field_date.content|date('d') }}</span>
    <span class="year">{{ fields.field_date.content|date('Y') }}</span>
  </div>
  <div class="article-content">
    <div class="article-meta">
      {% if fields.field_image.content %}
        <div class="article-image">
          {{ fields.field_image.content }}
        </div>
        <div class="article-meta-category">
          <span class="article-author">{{ fields.field_autor.content }}</span>
          <span class="article-category">{{ fields.field_category.content }}</span>
        </div>
      {% endif %}
    </div>
    <div class="article">
      <div class="article-info">
        <div class="article-summary">
          <h2 class="article-title">{{ fields.title.content }}</h2>
          {{ fields.body.content }}
        </div>
        <a href="{{ url }}" class="read-more">READ MORE</a>
      </div>
    </div>

  </div>
</div>
