/**
 * @ingroup themeable
 */
#}

{%
  set classes = [
    'social-media-links--platforms',
    'platforms',
    appearance.orientation == 'h' ? 'inline horizontal' : 'vertical',
  ]
%}

<ul{{ attributes.addClass(classes) }}>
  {% for platform in platforms %}
    <li>
      <a href="{{ platform.url }}" {{ platform.attributes }} aria-label="{{ platform.name }}">
        {% if platform.image %}
          <img src="{{ file_url(platform.image) }}" alt="{{ platform.name }}" class="social-icon">
        {% else %}
          {{ platform.element }}
        {% endif %}
      </a>
    </li>
  {% endfor %}
</ul>
